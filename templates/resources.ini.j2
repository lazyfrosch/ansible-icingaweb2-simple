; {{ ansible_managed }}

[icingaweb_db]
type = "db"
db = "{{ icingaweb2_db_type }}"
host = "{{ icingaweb2_db_host }}"
dbname = "{{ icingaweb2_db_database }}"
username = "{{ icingaweb2_db_username }}"
password = "{{ icingaweb2_db_password }}"

[icinga_ido]
type = "db"
db = "{{ icingaweb2_ido_type }}"
host = "{{ icingaweb2_ido_host }}"
dbname = "{{ icingaweb2_ido_database }}"
username = "{{ icingaweb2_ido_username }}"
password = "{{ icingaweb2_ido_password }}"

{% for resource in icingaweb2_resources %}
[{{ resource.name }}]
{% for key, value in resource.items() %}
{%- if key != 'name' %}
{{ key }} = "{{ value }}"
{% endif %}
{% endfor %}
{% endfor %}
